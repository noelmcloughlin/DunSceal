<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_dun_title_desc"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:showIn="@layout/content_main"
    app:layout_constraintTop_toBottomOf="@+id/appBarLayout">

    <EditText
        android:id="@+id/dunTitle"
        android:layout_width="@dimen/layout_field_width_full"
        android:layout_height="@dimen/layout_field_height_standard"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:autofillHints=""
        android:hint="@string/hint_dunTitle"
        android:inputType="text"
        android:maxLength="30"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/dunDescription"
        android:layout_width="@dimen/layout_field_width_full"
        android:layout_height="@dimen/layout_field_height_tall"
        android:layout_marginStart="16dp"
        android:hint="@string/hint_dunDescription"
        android:inputType="text"
        android:maxLength="512"
        android:maxLines="1"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dunTitle" />
</androidx.constraintlayout.widget.ConstraintLayout>