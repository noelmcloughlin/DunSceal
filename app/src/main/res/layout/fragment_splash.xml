<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/title_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ie.noel.dunsceal.views.login.SplashView"
    tools:layout_editor_absoluteY="81dp">

  <!-- TODO: Update blank fragment layout -->

  <ImageView
      android:id="@+id/splashPicture"
      android:layout_width="363dp"
      android:layout_height="92dp"
      android:layout_marginTop="48dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:srcCompat="@drawable/logo_contrasted" />

  <Button
      android:id="@+id/play_btn"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="230dp"
      android:layout_height="45dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/rounded_button"
      android:text="@string/play_btn_splash"
      android:textColor="@color/colorAccent"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/title_image" />

  <!-- Button
      android:id="@+id/play_btn2"
      style="@style/Widget.AppCompat.Button.Borderless"
      android:layout_width="230dp"
      android:layout_height="45dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:background="@drawable/rounded_button"
      android:text="@string/play_btn_home"
      android:textColor="@color/colorAccent"
      android:textSize="18sp"
      android:textStyle="bold"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/play_btn" / -->

  <ImageView
      android:id="@+id/title_image"
      android:layout_width="362dp"
      android:layout_height="225dp"
      android:layout_marginStart="8dp"
      android:layout_marginEnd="8dp"
      android:scaleType="centerCrop"
      android:src="@drawable/hillfort_landscape_image"
      app:layout_constraintBottom_toTopOf="@+id/play_btn"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/splashPicture" />

</androidx.constraintlayout.widget.ConstraintLayout>
