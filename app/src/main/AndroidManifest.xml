<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.noel.dunsceal">

  <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality.
    -->
  <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

  <application
    android:name="org.noel.dunsceal.main.DunScealApp"
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme"
      tools:ignore="GoogleAppIndexingWarning">

    <meta-data
      android:name="com.google.android.geo.API_KEY"
      android:value="@string/google_maps_key" />

    <activity android:name="org.noel.dunsceal.activity.DunListActivity">
    </activity>
    <activity
      android:name="org.noel.dunsceal.activity.MapActivity"
      android:label="@string/title_activity_map" />
      <activity
          android:name=".activity.DunActivity"
          android:windowSoftInputMode="adjustResize">
      </activity>
      <activity android:name=".activity.SplashActivity">
          <intent-filter>
              <action android:name="android.intent.action.MAIN" />
              <category android:name="android.intent.category.LAUNCHER" />
          </intent-filter>
      </activity>
      <activity
          android:name=".activity.LoginActivity"
          android:screenOrientation="portrait" />
      <activity
          android:name=".activity.RegisterActivity"
          android:screenOrientation="portrait" />
      <activity
          android:name=".activity.DunUserActivity"
          android:screenOrientation="portrait"/>
  </application>



</manifest>