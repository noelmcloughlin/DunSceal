<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="ie.noel.dunsceal">

    <application
        android:name=".main.MainApp"
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        android:fullBackupContent="false">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".views.home.HomeView"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>

        <activity
            android:name=".views.dunlist.DunListView"
            android:label="@string/title_activity_dun_list"
            android:launchMode="singleTop">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".views.home.HomeView" />
        </activity>

        <activity
            android:name=".views.dun.DunView"
            android:label="@string/title_activity_dun">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.dunlist.DunListView" />
        </activity>

        <activity
            android:name=".views.editlocation.EditLocationView"
            android:label="@string/title_activity_edit_location">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.dun.DunView" />
        </activity>

        <activity
            android:name=".views.map.DunMapView"
            android:label="@string/title_activity_dun_maps"
            android:launchMode="singleTop">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".views.dunlist.DunListView" />
        </activity>

        <activity
            android:name=".views.login.LoginView"
            android:label="@string/app_name"
            android:launchMode="singleTop">
        </activity>

        <activity android:name=".views.login.SplashView">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
        <activity
            android:name="ie.noel.dunsceal.views.fragment.FragmentPresenter"
            android:label="@string/title_activity_fragment_tag"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="ie.noel.dunsceal.views.fragment.FragmentView"/>

        <activity
            android:name="ie.noel.dunsceal.views.FragmentContainerPresenter"
            android:label="@string/title_activity_container"
            android:theme="@style/AppTheme.NoActionBar" /> -->
    </application>

</manifest>
